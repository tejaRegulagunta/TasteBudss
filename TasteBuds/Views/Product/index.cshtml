@model IEnumerable<TasteBuds.Models.Product>

  <div class="mt-4 ml-4 d-flex flex-row justify-content-center">
    <a href="@Url.Action("Create","Product")" class="btn btn-outline-primary">Add The product</a>  
  </div>
  <br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit","Product",new{id=item.Id})" class="btn btn-outline-warning">Edit</a>
                    <a href="@Url.Action("Delete","Product",new{id=item.Id})" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

