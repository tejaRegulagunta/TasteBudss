@model TasteBuds.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<h2>Edit Product</h2>
<div>
    <form asp-action="Edit" method="post" class="w-50">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.5" required />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <br>
        <button type="submit" class="btn btn-outline-primary">Update</button>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </form>
</div>
