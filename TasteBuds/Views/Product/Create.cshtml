@{
}
@model TasteBuds.Models.Product

@{
    ViewData["Title"] = "Create Product";
}
<h2>Create FoodItems</h2>
<form asp-action="Create" class="mt-3 w-50" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" required />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="Index" class="btn btn-outline-success">Redirect To AddFoodItems</a>
</form>