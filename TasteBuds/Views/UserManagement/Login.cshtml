@{
}

<div class="food-form-container">
    <form asp-action="Login" method="post" asp-controller="UserManagement" class="form">
       
        <h4 class="ml-2">Login Now </h4>
        <div class="form-group">
            <label html-for="email">Email :</label>
            <input type="email" asp-for="Email" id="email" name="Email" placeholder="Email" value="@Model.Email" class="form-control"/> <br />
        </div>
        <div class="form-group">
            <label html-for="password">Password :</label>
            <input type="password" asp-for="Password" id="password" name="Password" placeholder="Password" value="@Model.Password" class="form-control"/><br />
        </div>
        <button type="submit" class="btn btn-outline-primary">Login</button>
    </form>
</div>
