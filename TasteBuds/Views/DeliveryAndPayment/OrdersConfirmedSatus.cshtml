@model IEnumerable<TasteBuds.Models.CartModel>
<h1 class="mt-3">Order Status</h1>
<div class="orderstate">
    <table class="mt-3 ml-3">
        <thead>
            <tr class="mr-2">
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="mr-2">
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <h1 class="text-center mt-2">Payment Done</h1>
    <h3 class="text-center mt-2">Your Order Placed Successfully</h3>
</div>
